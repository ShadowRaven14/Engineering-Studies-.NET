@page
@model PS5.Pages.EditModel
@{
    ViewData["Title"] = "Edytuj";
}

<h2>Edytuj</h2>
<br />
<br />

<tbody style="        background-color: whitesmoke;
        color: black">
    @Html.Raw(Model.lblInfoText)
</tbody>

<div class="container">
    <form class="form-horizontal" method="post">
        <div class="form-group">
            @Html.Hidden("editProduct.id", Model.newProduct.id)
            <label asp-for="newProduct.name" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="newProduct.name" class="form-control" value="@Model.newProduct.name">
                <span asp-validation-for="newProduct.name" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="newProduct.price" class="control-label col-sm2"></label>
            <div class="col-sm-6">
                <input asp-for="newProduct.price" class="form-control" value="@Model.newProduct.price">
                <span asp-validation-for="newProduct.price" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button class="btn btn btn-primary">Zatwierdź</button>
            </div>
        </div>
    </form>
</div>